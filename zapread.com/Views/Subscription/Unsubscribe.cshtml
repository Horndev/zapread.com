@model zapread.com.Models.Subscription.UnsubscribeIndexViewModel

@{
    Layout = "~/Views/Shared/_LayoutSubscriptions.cshtml";
    ViewBag.Title = "Subscriptions";
}

<div class="wrapper border-bottom  page-heading" style="padding-bottom: 0px;">
    <div class="row">
        <div class="col-sm-2 ">
        </div>
        <div class="col-sm-8 white-bg">
            <br />
            <h2>Unsubscribe from @Model.UnsubFunction</h2>
        </div>
        <div class="col-sm-2">
        </div>
    </div>
</div>

<div class="wrapper wrapper-content" style="padding-top: 0px;">
    <div class="row">
        <div class="col-sm-2"></div>
        <div class="col-sm-8 white-bg" style="padding-right: 40px;padding-left: 40px;">
            <div class="social-feed-box-nb">
                <span></span>
            </div>
            <div style="padding-top: 30px;">
                <big>
                    <p>Hello, @Model.Name!</p>

                    <p>
                        It looks like you wish to unsubscribe from @Model.UnsubFunction.
                    </p>
                    <p>
                        The email we have on record for your account is <b>@Model.UserEmail</b>.
                    </p>

                    <p>
                        To confirm that you wish to unsubscribe, please click the button below.
                    </p>
                </big>
            </div>
            <div class="social-feed-box-nb" style="padding-top: 30px;">
                <p align="center">
                    <a href="/Subscription/Confirm/@Model.UserUnsubscribeId/" class="btn btn-block btn-lg btn-primary btn-outline">Unsubscribe</a>
                </p>
            </div>
            <div class="social-feed-box-nb" style="padding-top: 30px;">
                <p>
                    Note that you can change your email and notification settings by <a href="@Url.Action("Login", "Account")">logging in</a> and managing your account.
                </p>
            </div>
            <div class="social-feed-box-nb" style="margin-bottom:50px;">
                <span></span>
            </div>
        </div>
    </div>
</div>

@section Styles {
    @Styles.Render("~/bundles/subscription/unsubscribe/css")
}